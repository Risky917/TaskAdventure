<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Task Manager</title>
  <link rel="stylesheet" href="/styles/taskmanager.css">
</head>

<body>
  <div class="container">
    <div class="task-list-container">
      <h2 class="task-list-header">Your Tasks</h2>
      <div class="task-list">
        {{#if tasks.length}}
        {{#each tasks}}
        <div class="task-item">
          <div class="task-info">
            <span><strong>{{title}}</strong> (Character: {{characterName}})</span>
            <span>Due Date: {{dueDate}}</span>
            <span>Status: {{#if completed}} Completed {{else}} Pending {{/if}}</span>
            <span>XP: {{xp}}</span>
          </div>

          {{!-- Show Accept button only if task is not accepted (pending = 0) --}}
          {{#unless pending}}
          <form action="/task/accept/{{id}}" method="POST" style="display: inline;">
            <button type="submit">Accept</button>
          </form>
          {{/unless}}

          {{!-- Always show delete --}}
          <form action="/task/delete/{{id}}" method="POST" style="display: inline;">
            <button type="submit">Delete</button>
          </form>
        </div>
        {{/each}}
        {{else}}
        <p>No tasks available. Add a new task!</p>
        {{/if}}
      </div>
    </div>

    <div class="add-task-form-container">
      <h2 class="add-task-form-header">Add New Task</h2>
      <form action="/Taskmanager" method="POST" class="add-task-form">
        <div class="form-group">
          <label for="task-name">Task</label>
          <input type="text" id="task-name" name="taskName" placeholder="Task Name" required>
        </div>
        <div class="form-group">
          <label for="task-deadline">Due Date</label>
          <input type="date" id="task-deadline" name="taskDeadline" required>
        </div>
        <div class="form-group">
          <label for="task-description">Description</label>
          <textarea id="task-description" name="taskDescription" placeholder="Task Description" required></textarea>
        </div>
        <div class="form-group">
          <label for="task-xp">XP</label>
          <input type="number" id="task-xp" name="taskXp" placeholder="XP Reward" required min="0">
        </div>
        <div class="form-group">
          <label for="character-select">Select Character</label>
          <select id="character-select" name="characterId" required>
            {{#each characters}}
            <option value="{{id}}">{{name}}</option>
            {{/each}}
          </select>
        </div>
        <button type="submit">Add Task</button>
      </form>
    </div>
    <script src="/scripts/TaskManger.js"></script>
</body>

</html>
