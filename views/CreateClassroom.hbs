<link rel="stylesheet" href="/styles/classroom.css" />
<h1>{{pageTitel}}</h1>

{{#if message}}
  <p class="message">{{message}}</p>
{{/if}}

<form action="/CreateClassroom" method="POST" class="classroom-form">
  <div>
    <label for="className">Naam klas:</label>
    <input type="text" id="className" name="className" required>
  </div>

  <div>
    <label for="code">Code klas:</label>
    <input type="text" id="code" name="code" required>
  </div>

  <div>
    <label for="characterId">Kies een leraar (personage):</label>
    <select name="characterId" id="characterId" required>
      {{#each characters}}
        <option value="{{this.id}}">{{this.name}}</option>
      {{/each}}
    </select>
  </div>

  <button type="submit">Maak klas aan</button>
</form>


<div class="extra-button">
  <a href="/joinClassroom" class="button-secondary">Of sluit aan bij een klas</a>
</div>
