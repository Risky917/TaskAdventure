<link rel="stylesheet" href="/styles/classroom.css" />
<h1>{{pageTitel}}</h1>

{{#if message}}
  <p class="message">{{message}}</p>
{{/if}}

<form action="/CreateClassroom" method="POST" class="classroom-form">
  <div>
    <label for="className">Class Name:</label>
    <input type="text" id="className" name="className" required value="{{oldClassName}}">
  </div>

  <div>
    <label for="code">Class Code:</label>
    <input type="text" id="code" name="code" required value="{{oldCode}}">
  </div>

  <div>
    <label for="characterId">Choose a character:</label>
    <select name="characterId" id="characterId" required>
      {{#each characters}}
        <option value="{{this.id}}" {{#ifEquals this.id ../oldCharacterId}}selected{{/ifEquals}}>{{this.name}}</option>
      {{/each}}
    </select>
  </div>

  <button type="submit">Create Class</button>
</form>

<div class="extra-button">
  <a href="/joinClassroom" class="button-secondary">Or join a class</a>
</div>