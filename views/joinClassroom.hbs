<link rel="stylesheet" href="/styles/classroom.css" />
<h1>{{pageTitel}}</h1>

{{#if message}}
<p class="message-status {{#ifEquals message 'You have successfully joined the class!'}}success{{else}}error{{/ifEquals}}">{{message}}</p>
{{/if}}

<form action="/joinClassroom" method="POST" class="classroom-form">
  <div>
    <label for="name">Class Name:</label>
    <input type="text" id="name" name="name" required value="{{name}}">
  </div>

  <div>
    <label for="code">Class Code:</label>
    <input type="text" id="code" name="code" required value="{{code}}">
  </div>

  <button type="submit">Join Classroom</button>
</form>
<div class="extra-button">
  <a href="/CreateClassroom" class="button-secondary">Back to Create Class</a>
</div>