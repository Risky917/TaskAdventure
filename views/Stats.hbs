<body>

    <section>
      <article class="TaskCopleted">
        <h4>Task Completed</h4>
        <p class="Stats">{{stats.taskCompleted}}</p>
      </article>

      <article class="TaskNotCopleted">
        <h4>Task Failed</h4>
        <p class="Stats">{{stats.taskFailed}}</p>
      </article>

      <article class="TotalXpGained">
        <h4>Total Xp gained</h4>
        <p class="Stats">{{stats.totalXpGained}}</p>
      </article>

      <article class="Friends">
        <h4>Friends</h4>
        <p class="Stats">{{stats.friends}}</p>
      </article>
      <article class="MostXpForOneTask">
        <h4>Most Xp for 1 task</h4>
        <p class="Stats">{{stats.mostXpForOneTask}}</p>
