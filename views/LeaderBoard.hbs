<link rel="stylesheet" href="/styles/leaderboard.css">

<div class="podium">
    <div class="block second">
        <div class="namexp">
            <p class="top3">{{top3.[1].name}}</p>
            <p class="top3 xp">{{top3.[1].xp}} XP</p>
        </div>
        {{!-- CORRECTED LINE BELOW --}}
        <img src="{{getCharacterImage top3.[1] top3.[1]}}" class="character-img" alt="2nd place" />
        <p class="place">2</p>
    </div>

    <div class="block first">
        <div class="namexp">
            <p class="top3">{{top3.[0].name}}</p>
            <p class="top3 xp">{{top3.[0].xp}} XP</p>
        </div>
        {{!-- CORRECTED LINE BELOW --}}
        <img src="{{getCharacterImage top3.[0] top3.[0]}}" class="character-img" alt="1st place" />
        <p class="place">1</p>
    </div>

    <div class="block third">
        <div class="namexp">
            <p class="top3">{{top3.[2].name}}</p>
            <p class="top3 xp">{{top3.[2].xp}} XP</p>
        </div>
        {{!-- CORRECTED LINE BELOW --}}
        <img src="{{getCharacterImage top3.[2] top3.[2]}}" class="character-img" alt="3rd place" />
        <p class="place">3</p>
    </div>
</div>

<div class="container">
    <div class="scroll-box">
        <div class="scroll-content">
            {{#each others}}
            <div class="item">
                {{!-- CORRECTED LINE BELOW --}}
                <img src="{{getCharacterImage this this}}" class="head" />
                <p class="name">{{this.name}}</p>
                <p class="experience">XP: {{this.xp}}</p>
            </div>
            {{/each}}
        </div>
    </div>
</div>