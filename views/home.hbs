      <h2>Active tasks</h2>
      {{#if tasks.length}}
        <div class="task-list">
          {{#each tasks}}
            <div class="task-card">
              <div class="task-icon">{{title.[0]}}</div>
              <div class="task-info">
                <div class="task-title">{{title}}</div>
                <div class="task-exp">{{xp}} xp points</div>
                <div class="task-date">Due: {{dueDate}}</div>
              </div>
              <div class="task-expand">&#9660;</div>
            </div>
            <div class="task-details hidden">
              <p><strong>Description:</strong> {{description}}</p>
            </div>
          {{/each}}
        </div>
      {{else}}
        <p>You have no active tasks. <a href="/taskmanager">Create one here</a>.</p>
      {{/if}}
    </div>
  </div>

