{{!-- Home page --}}
  <link rel="stylesheet" href="/styles/Home.css" />
<div class="container">
  <div class="character-section">
    <img src="/img/malePixel.png" alt="Character" class="character-image" id="characterImgHome">
  </div>
  <div class="task-section">
    <h2>Active tasks</h2>
    <div class="task-list">
      {{#if tasks.length}}
        {{#each tasks}}
          <div class="task-card">
            <div class="task-icon">{{initial}}</div>
            <div class="task-info">
              <div class="task-title">{{title}}</div>
              <div class="task-date">{{date}}</div>
            </div>
            <div class="task-expand">&#9660;</div>
          </div>
          <div class="task-details hidden">
            <p>Omschrijving: {{description}}</p>
          </div>
        {{/each}}
      {{else}}
        <p>No active tasks found.</p>
      {{/if}}
    </div>
  </div>
</div>
<script src="/scripts/home.js"></script>